@{
    ViewBag.Title = "JobOA—员工登录";
}

@section css{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/register.css")" />
}
@section scripts{
    <script src="@Url.Content("~/Scripts/js/modal.js")"></script>
    <script src="@Url.Content("~/Scripts/js/homeIndex.js")"></script>
}

<div class="header">
    <div class="am-g">
        <div class="am-u-sm-4 am-show-lg-only" style="margin:10px 0px 0px 0px;"><img src="@Url.Content("~/Content/images/oaui/web_ico.png")" width="300" height="150" alt="JOB OA" title="Job OA" /></div>
        <div class="am-u-sm-4">
            <h1>JOB OA</h1>
            <p>Job Office Automation<br />利用技术手段提高办公效率</p>
        </div>
        <div class="am-u-sm-4"><button class="am-btn am-btn-secondary" style="height:45px;" onclick="javascript:window.location.href='/Account/Register'">没有账号，转到注册</button></div>
    </div>
    <hr />
</div>
<div class="am-g">
    <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
        <h3>登录</h3>
        <hr />
        <br />
        <br />

        <form method="post" class="am-form">
            <label for="email">手机号（用户名）:<span id="loginMess" style="color:white"></span></label>
            <input id="userName" type="tel" name="phone" placeholder="手机号码/用户名" value="">
            <br>
            <label for="password">密码:</label>
            <input id="password" type="password" name="password" placeholder="密码" value="">
            <br>
            <label for="remember">
                <input id="remember" name="remember" value="1" type="checkbox" style="width:15px;height:15px;">
                记住密码
            </label>
            <br />
            <div class="am-cf">
                <input id="goLogin" type="button" value="登 录" class="am-btn am-btn-primary am-btn-sm am-fl">
                <input type="button" name="" value="忘记密码 ^_^? " class="am-btn am-btn-default am-btn-sm am-fr">
            </div>
        </form>
        <hr>
        <p>© 2014 AllMobilize, Inc. Licensed under MIT license.</p>
    </div>
</div>
