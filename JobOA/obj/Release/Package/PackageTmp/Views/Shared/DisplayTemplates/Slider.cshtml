@using JobOA.Model
@{
    //随机选择一种显示方式
    Random rand = new Random();
    int num = rand.Next(0, 17);
    string[] sliders = new string[] { 
        "default","a1", "a2", "a3", "a4", "a5",
        "b1" ,"b2","b3","b4",
        "c1" ,"c2","c3","c4",
        "d1" ,"d2","d3"
    };
    //确定是否要显示小图设置信息
    string amSlider=String.Empty;
    if (sliders[num].Equals("d3"))
    {
        amSlider = "'controlNav':'thumbnails',";
    }
    List<OAUi> pictureOauiList = ViewBag.PictureOauiList;
}
<div data-am-widget="slider" class="am-slider am-slider-@sliders[num]" data-am-slider='{@amSlider"directionn":false}' data-am-flexslider="{playAfterPaused: 8000}">
    <ul class="am-slides">
        @{
            if (pictureOauiList == null) { 
            for (var i = 1; i <= 4; i++)
            {
                string minImg = String.Empty;
                string img = "http://s.amazeui.org/media/i/demos/bing-" + i + ".jpg";
                if (sliders[num].Equals("d3"))
                {
                    minImg = "data-thumb=http://s.amazeui.org/media/i/demos/bing-";
                    minImg += i + ".jpg";
                }
                <li @minImg>
                    <img src="@img">
                    @if (sliders[num].Equals("c1") || sliders[num].Equals("c2") || sliders[num].Equals("c4"))
                    {
                        <div class="am-slider-desc">远方 有一个地方 那里种有我们的梦想</div>
                    }
                    else if (sliders[num].Equals("c3"))
                    {
                        <div class="am-slider-desc"><div class="am-slider-counter"><span class="am-active">@i</span>/4</div>远方 有一个地方 那里种有我们的梦想</div>
                    }
                    else if (sliders[num].Equals("d1"))
                    {
                        <div class="am-slider-desc"><h2 class="am-slider-title">远方 有一个地方 那里种有我们的梦想</h2><span class="am-slider-more">了解更多</span></div>
                    }
                    else if (sliders[num].Equals("d2"))
                    {
                        <div class="am-slider-desc"><div class="am-slider-content"><h2 class="am-slider-title">远方 有一个地方 那里种有我们的梦想</h2><p>内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内</p></div><a class="am-slider-more">了解更多</a></div>
                    }
                    else if (sliders[num].Equals("d2"))
                    {
                        <div class="am-slider-desc"><div class="am-slider-content"><h2 class="am-slider-title">远方 有一个地方 那里种有我们的梦想</h2><p>内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内</p></div><a class="am-slider-more">了解更多</a></div>
                    }
                    else if (sliders[num].Equals("d3"))
                    {
                        <div class="am-slider-desc"><h2 class="am-slider-title">远方 有一个地方 那里种有我们的梦想</h2><p>内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内</p></div>
                    }
                </li>
            }
            }
            else
            {
                for (var i = 0; i < 4; i++)
                {
                    string minImg = String.Empty;
                    string img = "/Content/images/oaui/"+pictureOauiList[i].UiImg;
                    if (sliders[num].Equals("d3"))
                    {
                        minImg = "data-thumb='/Content/images/oaui/" + pictureOauiList[i].UiImg+"'";
                    }
                    <li @minImg>
                        <img src="@img" title="@pictureOauiList[i].UiTitle">
                        @if (sliders[num].Equals("c1") || sliders[num].Equals("c2") || sliders[num].Equals("c4"))
                        {
                            <div class="am-slider-desc">@pictureOauiList[i].UiMess</div>
                        }
                        else if (sliders[num].Equals("c3"))
                        {
                            <div class="am-slider-desc"><div class="am-slider-counter"><span class="am-active">@(i+1)</span>/4</div>@pictureOauiList[i].UiMess</div>
                        }
                        else if (sliders[num].Equals("d1"))
                        {
                            <div class="am-slider-desc"><h2 class="am-slider-title">@pictureOauiList[i].UiMess</h2><span class="am-slider-more">了解更多</span></div>
                        }
                        else if (sliders[num].Equals("d2"))
                        {
                            <div class="am-slider-desc"><div class="am-slider-content"><h2 class="am-slider-title">@pictureOauiList[i].UiTitle</h2><p>@pictureOauiList[i].UiMess</p></div><a class="am-slider-more">了解更多</a></div>
                        }
                        else if (sliders[num].Equals("d2"))
                        {
                            <div class="am-slider-desc"><div class="am-slider-content"><h2 class="am-slider-title">@pictureOauiList[i].UiTitle</h2><p>@pictureOauiList[i].UiMess</p></div><a class="am-slider-more">了解更多</a></div>
                        }
                        else if (sliders[num].Equals("d3"))
                        {
                            <div class="am-slider-desc"><h2 class="am-slider-title">@pictureOauiList[i].UiTitle</h2><p>@pictureOauiList[i].UiMess</p></div>
                        }
                    </li>
                }
            }
}
    </ul>
</div>

